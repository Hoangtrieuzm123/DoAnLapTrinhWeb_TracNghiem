@model Nhom6_DoAnMonHoc.Models.CauHoi

<h2>Sửa Câu Hỏi</h2>

<form asp-action="Update">
    <div class="form-group">
        <label asp-for="Cauhoi" class="control-label">Câu Hỏi</label>
        <textarea asp-for="Cauhoi" class="form-control"></textarea>
        <span asp-validation-for="Cauhoi" class="text-danger"></span>
    </div>

    <!-- Thêm các field cho Đáp Án A, B, C, D -->
    <div class="form-group">
        <label asp-for="DapanA" class="control-label">Đáp Án A</label>
        <input asp-for="DapanA" class="form-control" />
        <span asp-validation-for="DapanA" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DapanB" class="control-label">Đáp Án B</label>
        <input asp-for="DapanB" class="form-control" />
        <span asp-validation-for="DapanB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DapanC" class="control-label">Đáp Án C</label>
        <input asp-for="DapanC" class="form-control" />
        <span asp-validation-for="DapanC" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DapanD" class="control-label">Đáp Án D</label>
        <input asp-for="DapanD" class="form-control" />
        <span asp-validation-for="DapanD" class="text-danger"></span>
    </div>

    <!-- Field cho Đáp Án Đúng -->
    <div class="form-group">
        <label asp-for="Dapan" class="control-label">Đáp Án Đúng</label>
        <input asp-for="Dapan" class="form-control" />
        <span asp-validation-for="Dapan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Cập nhật" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </div>
</form>
