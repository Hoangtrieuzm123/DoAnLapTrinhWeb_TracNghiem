@model Nhom6_DoAnMonHoc.Models.DeThi

<h2>Thêm Đề Thi</h2>

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="Tendt" class="control-label"></label>
        <input asp-for="Tendt" class="form-control" />
        <span asp-validation-for="Tendt" class="text-danger"></span>
    </div>
    <!-- Thêm các field khác tương tự như trên -->
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </div>
</form>
