@model Nhom6_DoAnMonHoc.Models.DeThi

<h2>Cập Nhật Đề Thi</h2>

<form asp-action="Update">
    <input type="hidden" asp-for="Madt" />
    <div class="form-group">
        <label asp-for="Tendt" class="control-label"></label>
        <input asp-for="Tendt" class="form-control" />
        <span asp-validation-for="Tendt" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Thoigianthi" class="control-label"></label>
        <input asp-for="Thoigianthi" class="form-control" />
        <span asp-validation-for="Thoigianthi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Soluongcauhoi" class="control-label"></label>
        <input asp-for="Soluongcauhoi" class="form-control" />
        <span asp-validation-for="Soluongcauhoi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mota" class="control-label"></label>
        <textarea asp-for="Mota" class="form-control"></textarea>
        <span asp-validation-for="Mota" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Cập Nhật" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
    </div>
</form>
