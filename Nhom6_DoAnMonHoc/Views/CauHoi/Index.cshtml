@model IEnumerable<Nhom6_DoAnMonHoc.Models.CauHoi>

<h2>Danh Sách Câu Hỏi</h2>

<a class="btn btn-primary" asp-controller="CauHoi" asp-action="Add">Thêm Câu Hỏi</a>


<table class="table">
    <thead>
        <tr>
            <th>Câu Hỏi</th>
            <th>Đáp Án A</th>
            <th>Đáp Án B</th>
            <th>Đáp Án C</th>
            <th>Đáp Án D</th>
            <th>Đáp Án Đúng</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cauhoi</td>
                <td>@item.DapanA</td>
                <td>@item.DapanB</td>
                <td>@item.DapanC</td>
                <td>@item.DapanD</td>
                <td>@item.Dapan</td>
                <td>
                    <a href="@Url.Action("Display", "CauHoi", new { id = item.Mach })">View</a> |
                    <a href="@Url.Action("Update", "CauHoi", new { id = item.Mach })">Edit</a> |
                    <a href="@Url.Action("Delete", "CauHoi", new { id = item.Mach })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
